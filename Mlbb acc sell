<script>
    let selectedImageData = "";
    function previewImage(event) {
        const reader = new FileReader();
        reader.onload = function() {
            document.getElementById('img-preview').src = reader.result;
            document.getElementById('img-preview').style.display = 'block';
            selectedImageData = reader.result;
        };
        reader.readAsDataURL(event.target.files[0]);
    }

    let postID = 0;
    function addNewPost() {
        const price = document.getElementById('price').value;
        const rank = document.getElementById('rank').value;
        const skins = document.getElementById('skins').value;
        const heroes = document.getElementById('heroes').value;
        const note = document.getElementById('note').value;

        if(!price || !selectedImageData) { alert("Please fill data!"); return; }

        postID++;
        const postHTML = `
            <div class="acc-card" id="post-${postID}">
                <div class="sold-badge">SOLD</div>
                <div class="acc-header">
                    <span style="color: #666; font-size: 11px;">KIMO-ID: #${postID + 1000}</span>
                    <span class="price-badge">${Number(price).toLocaleString()} Ks</span>
                </div>
                <div class="acc-body">
                    <div class="info-row"><strong>Rank / ·Ä°·ÄÜ·ÄÑ·Ä∑·Ä∫</strong> <span>${rank}</span></div>
                    <div class="info-row"><strong>Skins / ·ÄÖ·ÄÄ·ÄÑ·Ä∫</strong> <span>${skins}</span></div>
                    <div class="info-row"><strong>Heroes / ·Äü·ÄÆ·Ä∏·Äõ·Ä≠·ÄØ·Ä∏</strong> <span>${heroes}</span></div>
                    <div class="info-row"><strong>Note / ·Ä°·ÄÅ·Äª·ÄÄ·Ä∫·Ä°·Äú·ÄÄ·Ä∫</strong> <span>${note}</span></div>
                    <img src="${selectedImageData}" class="acc-image">
                </div>
                <div class="card-footer">
                    <a href="https://t.me/Ironman2005born" target="_blank" class="tg-link-btn">BUY / ·Äù·Äö·Ä∫·Äö·Ä∞·Äõ·Äî·Ä∫</a>
                    <button class="sold-out-btn" onclick="toggleSold(${postID})">Seller: Mark Sold / ·Äõ·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏·Äï·Äº·ÄÆ·Ä∏·Äû·Äê·Ä∫·Äô·Äæ·Äê·Ä∫·Äõ·Äî·Ä∫</button>
                </div>
            </div>
        `;
        document.getElementById('shop-feed').insertAdjacentHTML('afterbegin', postHTML);
        document.querySelectorAll('.input-field').forEach(i => i.value = "");
        document.getElementById('img-preview').style.display = 'none';
        selectedImageData = "";
    }

    function toggleSold(id) {
        const card = document.getElementById(`post-${id}`);
        card.classList.toggle('sold-out-status');
        card.querySelector('.sold-out-btn').innerText = card.classList.contains('sold-out-status') ? "Seller: Restore / ·Äï·Äº·Äî·Ä∫·Äê·ÄÑ·Ä∫·Äô·Ää·Ä∫" : "Seller: Mark Sold / ·Äõ·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏·Äï·Äº·ÄÆ·Ä∏·Äû·Äê·Ä∫·Äô·Äæ·Äê·Ä∫·Äõ·Äî·Ä∫";
    }
</script>

